<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiDemo.Pages.Exo1"
             Title="Exo1">
    <VerticalStackLayout>
        <Label Text="Faire un bouton, un champ texte et un label. Quand on clique sur le bouton, ce qu’on a écrit dans le champ texte est reporté dans le label"/>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            x:Name="MyLabel"/>
        <Entry Placeholder="Écrire..." x:Name="UserInput"/>
        <Button Text="Le texte devient le label" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>