            Route="Exo6" />

        <ShellContent
            Title="Exo7"
            ContentTemplate="{DataTemplate Pages:Exo7}"
            Route="Exo7" />

        <ShellContent
            Title="Exo8"
            ContentTemplate="{DataTemplate Pages:Exo8}"
            Route="Exo8" />

        <ShellContent
